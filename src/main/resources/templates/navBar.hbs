<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Team</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/getTeams/new" method="post">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Squad Name</label>
                        <input   type="text" name="name" class="form-control" id="" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Squad Cause</label>
                        <input type="text" name="cause" class="form-control" id="f" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput2" class="form-label">Max Members</label>
                        <input type="number" name="maxMembers" class="form-control" id="formGroupExampleInput2" placeholder="">
                    </div>

                    <select class="form-select" name="squadHero" aria-label="Default select example">
                        {{#if allHeroes}}
                            <option selected>Select Super Hero</option>
                            {{#each allHeroes}}
                                <option value="{{ id }}">{{ heroName }} {{ id }}</option>

                            {{/each}}
                        {{else}}
                            <option selected>No Super Hero Created</option>


                        {{/if}}



                    </select>

                    <button type="submit" class="btn" data-bs-dismiss="modal">Submit</button>
                </form>
            </div>
