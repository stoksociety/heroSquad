{{#partial  "title"}}
    Heroes
{{/partial}}

{{#partial "content"}}
    {{> navBar.hbs }}

    <div class="banner jumbotron h-50">

    </div>

    <div class="heroes">
        <h2>All Heroes</h2>
        <div class="row">

            {{#if allHeroes }}
                {{#each allHeroes }}
                    <div class="col-md-4 col-xl-3">
                        <div class="card bg-c-green order-card">
                            <div class="card-block">
                                <p class="m-b-0">Power: <span class="f-right">{{ power }}</span></p>
                                <h2 class="text-right"> {{ heroName }}</h2>
                                <p class="m-b-0">Weakness: <span class="f-right">{{ weakness }}</span></p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="alert alert-danger" role="alert">
                    No Heroes Created!!
                    Visit The  <a href="/" class="alert-link">HomePage</a> to Create One!
                </div>
            {{/if}}


        </div>
    </div>





{{/partial}}

